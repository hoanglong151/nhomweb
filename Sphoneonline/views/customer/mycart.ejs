<html>
<%- include('./Layout/head')%>

<body class="customer">
  <%- include('./Layout/header')%>
  <form class="bg0 p-t-75 p-b-85">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-xl-7 m-lr-auto m-b-50">
          <div class="m-l-25 m-r--38 m-lr-0-xl">
            <div class="wrap-table-shopping-cart">
              <table class="table-shopping-cart">
                <tbody>
                  <tr class="table_head">
                    <th class="column-1">Image</th>
                    <th class="column-2">Name</th>
                    <th class="column-3">Category</th>
                    <th class="column-3 text-center">Price</th>
                    <th class="column-3 text-center">Quantity</th>
                    <th class="column-5 text-center">Amount</th>
                    <th class="column-6">Del</th>
                  </tr>
                  <%  for (var [i, item] of session.mycart.entries()) { %>
                  <tr class="table_row">
                    <td class="column-1">
                      <div class="how-itemcart1">
                        <img src="data:image/jpg;base64,<%=item.product.image%>" width="70" height="70" />
                      </div>
                    </td>
                    <td class="column-2"><%=item.product.name%></td>
                    <td class="column-3"><%=item.product.category.name%></td>
                    <td class="column-4 text-center"><%=item.product.price%></td>
                    <td class="column-3 text-center"><%=item.quantity%></td>
                    <td class="column-5"><%=item.product.price * item.quantity%></td>
                    <td class="column-6"><a href="./remove2cart?id=<%=item.product._id%>"><i class="zmdi zmdi-tag-close"
                          style="width: 40px; height: 40px;"></i></a></td>
                  </tr>
                  <%  } %>
                </tbody>
              </table>
            </div>
            <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
              <div class="flex-w flex-m m-r-20 m-tb-5">
                <div>
                  <a class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5" href="./allProducts">Continue Shop</a>
                </div>
              </div>
              <div>                
                <a onclick="return confirm('Are You Sure ?')" class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10" href="./clear2cart">Clear Cart</a>
              </div>
            </div>
          </div>
        </div>

        <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
          <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
            <h4 class="mtext-109 cl2 p-b-30">
              Cart Totals
            </h4>
            <div class="flex-w flex-t p-t-27 p-b-33">
              <div class="size-208">
                <span class="mtext-101 cl2">
                  Total:
                </span>
              </div>

              <div class="size-209 p-t-1">
                <span class="mtext-110 cl2">
                  <%=total%> VNƒê
                </span>
              </div>
            </div>
            <a class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" href="./checkout"
              onclick="return confirm('ARE YOU SURE?')">Proceed to Checkout</a>
          </div>
        </div>
      </div>
    </div>
  </form>
  <%- include('./Layout/footer')%>
  <%- include('./Layout/foot')%>
</body>

</html>