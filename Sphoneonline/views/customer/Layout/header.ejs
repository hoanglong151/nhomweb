<body class="animsition" style="opacity: 1; animation-duration: 1500ms;">

    <!-- Header -->
    <header class="header-v4">
        <!-- Header desktop -->
        <div class="container-menu-desktop">
            <div class="top-bar">
                <div class="content-topbar flex-sb-m h-full container">
                    <div class="left-top-bar">
                        Free shipping for standard order over $100
                    </div>
                </div>
            </div>

            <div class="wrap-menu-desktop how-shadow1" style="top: 40px;">
                <nav class="limiter-menu-desktop container">

                    <!-- Logo desktop -->
                    <a class="logo" href="./">
                        <img alt="IMG-LOGO" src="images/icons/logo-01.png">
                    </a>

                    <!-- Menu desktop -->
                    <div class="menu-desktop">
                        <ul class="main-menu">
                            <li>
                                <a href="./">Home</a>
                            </li>
                        </ul>
                        <ul class="main-menu">
                            <li>
                                <a href="./allProducts">All Products</a>
                            </li>
                        </ul>
                        <ul class="main-menu">                      
                            <%  if (typeof(cats) !== 'undefined') { for (var cat of cats) { %>
                      
                            <li class="menu"><a href="./listproduct?catID=<%=cat._id%>"><%=cat.name%></a></li>
                            <%  } } %>
                        </ul>
                    </div>

                    <!-- Icon header -->
                    <div class="wrap-icon-header flex-w flex-r-m">

                        <div class="icon-header-item cl0 hov-cl1 trans-04 p-lr-11 icon-header-noti js-show-cart"
                            data-notify=<%= (session.mycart) ? session.mycart.length : 0 %>>
                            <a href="./mycart"><i class="zmdi zmdi-shopping-cart clblack"></i></a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>

        <!-- Modal Search -->
        <div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
            <div class="container-search-header">
                <button class="flex-c-m btn-hide-modal-search trans-04 js-hide-modal-search">
                    <img alt="CLOSE" src="images/icons/icon-close2.png">
                </button>

                <form class="wrap-search-header flex-w p-l-15">
                    <button class="flex-c-m trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>
                    <input name="search" class="plh3" type="text" placeholder="Search...">
                </form>
            </div>
        </div>
    </header>


</body>